                android:scaleX="1.5"
                android:scaleY="1.1"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                android:layout_weight="1"
                app:lottie_rawRes="@raw/raw_meteor"/>

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/game_img_meteor41"
