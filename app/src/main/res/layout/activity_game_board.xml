<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameActivity">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/game_img_gameBoard_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/img_game_background">
    </com.google.android.material.imageview.ShapeableImageView>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:padding="16dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_marginTop="15dp">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"

                android:src="@drawable/ic_left" />

            <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                android:id="@+id/game_BTB_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:backgroundTint="#EB4FC4"
                android:scaleX="1.3"
                android:scaleY="1.3"
                app:icon="@drawable/ic_left"
                app:iconTint="@color/white" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                android:id="@+id/game_BTB_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:backgroundTint="#EB4FC4"
                android:scaleX="1.3"
                android:scaleY="1.3"
                app:icon="@drawable/ic_right"
                app:iconTint="@color/white" />
        </RelativeLayout>

    </androidx.appcompat.widget.LinearLayoutCompat>




    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="50dp"
            android:orientation="horizontal">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/game_img_rocket_heart1"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/img_rocket_heart" />


            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/game_img_rocket_heart2"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/img_rocket_heart" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/game_img_rocket_heart3"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/img_rocket_heart" />
        </LinearLayout>
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="140dp"
        android:padding="10dp"
        android:layout_weight="0">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/game_img_elon40"
            android:layout_width="390dp"
            android:layout_height="105dp"
            android:layout_weight="1"
            android:src="@drawable/img_elon_musk_spaceship2"/>
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/game_img_elon41"
            android:layout_width="390dp"
            android:layout_height="105dp"
            android:layout_weight="1"
            android:src="@drawable/img_elon_musk_spaceship2"/>
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/game_img_elon42"
            android:layout_width="390dp"
            android:layout_height="105dp"
            android:layout_weight="1"
            android:src="@drawable/img_elon_musk_spaceship2"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="150dp"
        android:padding="10dp"
        android:layout_weight="0">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/game_img_smoke40"
            android:layout_width="390dp"
            android:layout_height="105dp"
            app:lottie_speed="1.5"
            android:scaleX="1.5"
            android:scaleY="1"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            android:layout_weight="1"
            app:lottie_rawRes="@raw/raw_smoke"/>

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/game_img_smoke41"
            android:layout_width="390dp"
            android:layout_height="105dp"
            app:lottie_speed="1.5"
            android:scaleX="1.5"
            android:scaleY="1"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            android:layout_weight="1"
            app:lottie_rawRes="@raw/raw_smoke"/>

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/game_img_smoke42"
